<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">


    <!--*****************************Servlet Mapping************************-->

    <servlet>
        <servlet-name>login_validation</servlet-name>
        <servlet-class>main.java.servlet.LoginValidation</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login_validation</servlet-name>
        <url-pattern>/login_validation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>main.java.servlet.RegistrationUpdate</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderDisplay</servlet-name>
        <servlet-class>main.java.servlet.OrderDisplay</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderDisplay</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>main.java.servlet.Logout</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>process_statistics</servlet-name>
        <servlet-class>main.java.servlet.ProcessStats</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>process_statistics</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>main.java.servlet.SetupHome</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!--*****************************JSP Mapping****************************-->
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>homeJSP</servlet-name>
        <jsp-file>/home.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>homeJSP</servlet-name>
        <url-pattern>/home_setup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderDisplayJSP</servlet-name>
        <jsp-file>/order_history.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderDisplayJSP</servlet-name>
        <url-pattern>/process_order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>statisticsJSP</servlet-name>
        <jsp-file>/statistics.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>statisticsJSP</servlet-name>
        <url-pattern>/statistics_page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restockJSP</servlet-name>
        <jsp-file>/update_stock.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>restockJSP</servlet-name>
        <url-pattern>/restock_page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restockSetup</servlet-name>
        <servlet-class>main.java.servlet.RestockServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>restockSetup</servlet-name>
        <url-pattern>/restock</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restockIngredient</servlet-name>
        <servlet-class>main.java.servlet.RestockSpecificIngredient</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>restockIngredient</servlet-name>
        <url-pattern>/update_stock</url-pattern>
    </servlet-mapping>

    <!--=======================================================================================================-->
    <!--Generic Mapping-->

    <mime-mapping>
        <extension>jpg</extension>
        <mime-type>image/jpeg</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>png</extension>
        <mime-type>image/png</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>css</extension>
        <mime-type>text/css</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>js</extension>
        <mime-type>text/javascript</mime-type>
    </mime-mapping>

    <mime-mapping>
        <extension>mp4</extension>
        <mime-type>video/mp4</mime-type>
    </mime-mapping>

</web-app>